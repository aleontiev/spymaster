# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# ThetaData Configuration (for historical open interest)
# Note: Authentication is via creds.txt file in ThetaTerminal directory
# THETADATA_BASE_URL defaults to http://localhost:25503/v3 (local terminal)
THETADATA_BASE_URL=http://localhost:25503/v3
THETADATA_TIMEOUT=60  # Request timeout in seconds

# Alpaca Trading API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading by default

# Trading Configuration
ENABLE_LIVE_TRADING=false
MAX_POSITION_SIZE=10000  # Maximum position size in USD
RISK_LIMIT_PERCENT=2.0   # Maximum risk per trade as percentage of portfolio

# Model Configuration
MODEL_CHECKPOINT_DIR=./checkpoints
EMBEDDING_DIM=512
BATCH_SIZE=2048

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/spymaster.log
